<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/root"
		android:background="@drawable/background_app"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

    <ImageView
            android:layout_width="421dp" android:layout_height="412dp"
            android:id="@+id/steering_wheel" android:contentDescription="@string/steering_wheel"
            app:srcCompat="@drawable/steering_wheel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="151dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"/>

	<ImageView
			android:layout_width="128dp"
			android:layout_height="265dp"
			android:id="@+id/pedal" android:contentDescription="@string/pedal"
			app:srcCompat="@drawable/gas_pedal"
			android:layout_toEndOf="@+id/steering_wheel"
			android:layout_marginBottom="29dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="117dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/steering_wheel"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="22dp"/>

	<io.github.corvini.myapplication.views.CheckableImageView
			android:layout_width="62dp"
			android:layout_height="52dp"
			android:layout_alignParentStart="true"
			android:padding="8dp"
			android:id="@+id/wheel_mode"
			android:background="@drawable/ic_hexagon"
			android:backgroundTint="@color/colorAccent"
			app:srcCompat="@drawable/ic_wheel_mode_0"
			android:tint="@color/colorPrimaryDark"
			android:layout_marginTop="59dp" app:layout_constraintTop_toBottomOf="@+id/connection_button"
			android:layout_marginBottom="11dp" app:layout_constraintBottom_toTopOf="@+id/chassis_position"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="45dp"
			app:layout_constraintEnd_toStartOf="@+id/steering_wheel" android:layout_marginEnd="53dp"/>

	<io.github.corvini.myapplication.views.CheckableImageView
			android:layout_width="62dp"
			android:layout_height="52dp"
			android:layout_alignParentStart="true"
			android:padding="8dp"
			android:id="@+id/chassis_position"
			android:background="@drawable/ic_hexagon"
			android:backgroundTint="@color/colorAccent"
			app:srcCompat="@drawable/ic_test"
			android:tint="@color/colorPrimaryDark"
			android:layout_marginTop="12dp"
			app:layout_constraintTop_toBottomOf="@+id/wheel_mode"
			android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/light_state"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="45dp"
			app:layout_constraintEnd_toStartOf="@+id/steering_wheel" android:layout_marginEnd="53dp"/>

	<io.github.corvini.myapplication.views.CheckableImageView
			android:layout_width="62dp"
			android:layout_height="52dp"
			android:layout_alignParentStart="true"
			android:paddingStart="12dp"
			android:paddingEnd="14dp"
			android:paddingTop="14dp"
			android:paddingBottom="14dp"
			android:id="@+id/light_state"
			android:background="@drawable/ic_hexagon"
			android:backgroundTint="@color/colorAccent"
			app:srcCompat="@drawable/ic_light_state_0"
			android:tint="@color/colorPrimaryDark"
			android:layout_marginTop="12dp"
			app:layout_constraintTop_toBottomOf="@+id/chassis_position"
			android:layout_marginBottom="65dp"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="45dp" app:layout_constraintEnd_toStartOf="@+id/steering_wheel"
			android:layout_marginEnd="53dp"/>

	<io.github.corvini.myapplication.views.ConnectionButton
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:id="@+id/connection_button"
			android:contentDescription="@string/connection_button"
			android:onClick="handleConnectionButtonClick"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="320dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/steering_wheel"
			android:layout_marginEnd="68dp"
			app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp"/>

	<io.github.corvini.myapplication.views.CheckableImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_gyroscope"
			android:tint="@color/icon_tint_selector_2"
			android:background="@drawable/background_selector_2"
			android:padding="8dp"
			android:id="@+id/gyro_mode"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="22dp"
			android:layout_marginBottom="50dp" app:layout_constraintBottom_toTopOf="@+id/pedal"
			app:layout_constraintStart_toEndOf="@+id/steering_wheel" android:layout_marginStart="77dp"/>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:id="@+id/wheel_mode_menu"
					android:orientation="vertical"
					android:background="@drawable/background_menu"
					android:backgroundTint="@color/colorPrimaryDark"
					android:layout_width="152dp"
					android:layout_height="56dp"
					android:alpha="0"
					android:visibility="gone"
					app:layout_constraintBottom_toTopOf="@+id/wheel_mode" app:layout_constraintStart_toStartOf="parent"
					android:layout_marginStart="13dp"
					android:clickable="false">

		<io.github.corvini.myapplication.views.CheckableImageView
				android:id="@+id/mode1"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@drawable/background_selector_1"
				app:srcCompat="@drawable/ic_wheel_mode_1"
				android:tint="@color/icon_tint_selector_1"
				android:adjustViewBounds="true"
				android:padding="7dp"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:layout_alignParentTop="true" android:layout_marginTop="3dp"
				android:layout_alignParentStart="true" android:layout_marginStart="9dp"/>

		<io.github.corvini.myapplication.views.CheckableImageView
				android:id="@+id/mode2"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@drawable/background_selector_1"
				app:srcCompat="@drawable/ic_wheel_mode_2"
				android:tint="@color/icon_tint_selector_1"
				android:adjustViewBounds="true"
				android:padding="7dp"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:layout_alignParentStart="true" android:layout_marginStart="56dp"
				android:layout_alignParentTop="true" android:layout_marginTop="3dp"/>

		<io.github.corvini.myapplication.views.CheckableImageView
				android:id="@+id/mode3"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@drawable/background_selector_1"
				app:srcCompat="@drawable/ic_wheel_mode_3"
				android:tint="@color/icon_tint_selector_1"
				android:adjustViewBounds="true"
				android:padding="9dp"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:layout_alignParentStart="true" android:layout_marginStart="102dp" android:layout_marginTop="3dp"
				android:layout_alignParentTop="true"/>

	</RelativeLayout>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:id="@+id/light_state_menu"
					android:orientation="vertical"
					android:background="@drawable/background_menu"
					android:backgroundTint="@color/colorPrimaryDark"
					android:layout_width="152dp"
					android:layout_height="56dp"
					android:alpha="0"
					android:visibility="gone"
					app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/light_state"
					android:layout_marginStart="13dp"
					android:clickable="false">

		<io.github.corvini.myapplication.views.CheckableImageView
				android:id="@+id/state1"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@drawable/background_selector_1"
				app:srcCompat="@drawable/ic_light_state_0"
				android:tint="@color/icon_tint_selector_1"
				android:adjustViewBounds="true"
				android:paddingStart="10dp"
				android:paddingEnd="11dp"
				android:paddingTop="11dp"
				android:paddingBottom="11dp"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:layout_alignParentTop="true" android:layout_marginTop="3dp"
				android:layout_alignParentStart="true" android:layout_marginStart="9dp"/>

		<io.github.corvini.myapplication.views.CheckableImageView
				android:id="@+id/state2"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@drawable/background_selector_1"
				app:srcCompat="@drawable/ic_light_state_1"
				android:tint="@color/icon_tint_selector_1"
				android:adjustViewBounds="true"
				android:paddingStart="8dp"
				android:paddingEnd="9dp"
				android:paddingTop="9dp"
				android:paddingBottom="9dp"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:layout_alignParentStart="true" android:layout_marginStart="56dp"
				android:layout_alignParentTop="true" android:layout_marginTop="3dp"/>

		<io.github.corvini.myapplication.views.CheckableImageView
				android:id="@+id/state3"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@drawable/background_selector_1"
				app:srcCompat="@drawable/ic_light_state_2"
				android:tint="@color/icon_tint_selector_1"
				android:adjustViewBounds="true"
				android:paddingStart="8dp"
				android:paddingEnd="9dp"
				android:paddingTop="9dp"
				android:paddingBottom="9dp"
				android:scaleX="0.9"
				android:scaleY="0.9"
				android:layout_alignParentStart="true" android:layout_marginStart="102dp" android:layout_marginTop="3dp"
				android:layout_alignParentTop="true"/>

	</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>